{erl_opts, [
    debug_info,
    nowarn_export_all,
    {i, "./_build/default/plugins/gpb/include"},
    {i, "./include/data"},
    {i, "./include/proto"},
    {i, "./include"},
    {extra_src_dirs,[{"data", [{recursive,false}]}]},
    {d, 'TEST'},
    {d, 'LANG_ZH'},
    {d, 'LANG', 'zh'}
]}.

{deps, [
    {jsone, ".*", {git, "git://github.com/sile/jsone.git", {tag, "1.5.7"}}},
    {ranch, ".*", {git, "git://github.com/ninenines/ranch.git", {tag,"2.0.0"}}},
    {mysql, ".*", {git, "git://github.com/mysql-otp/mysql-otp.git", {tag, "1.7.0"}}},
    {mysql_poolboy, ".*", {git, "git://github.com/mysql-otp/mysql-otp-poolboy.git", {tag, "0.2.1"}}},
    {recon, ".*", {git, "git://github.com/ferd/recon.git", {branch, "master"}}},
    {sync, ".*", {git, "git://github.com/rustyio/sync.git", {branch, "master"}}},
    {hackney, ".*", {git, "git://github.com/benoitc/hackney.git", {tag, "1.17.4"}}},
    {gpb, ".*", {git, "git://github.com/tomas-abrahamsson/gpb.git", {tag, "4.18.0"}}},
	{mochiweb, ".*", {git, "git://github.com/mochi/mochiweb", {tag, "v2.21.0"}}},
    {gproc, ".*", {git, "git://github.com/uwiger/gproc.git", {tag, "0.9.0"}}}
]}.

{plugins, [
    { rebar3_gpb_plugin, "2.20.3" }
]}.


{gpb_opts, [
    {i, "proto/proto"},
    {module_name_suffix, "_pb"},
    {o_erl, "../../../../src/proto/proto"},
    {o_hrl, "../../../../include/proto"},
    {strings_as_binaries, true},
    {defaults_for_omitted_optionals, true},
    type_specs]}.
{provider_hooks, [
    {pre, [
        {clean, {protobuf, clean}}
    ]}
]}.
